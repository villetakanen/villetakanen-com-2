{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "lib": ["ES2021", "DOM"],
    "experimentalDecorators": true,
    "useDefineForClassFields": false 
  }
}
